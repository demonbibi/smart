<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loginbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mooc_login_ui_15_red"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="用户登录"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mooc_login_ui_05"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mooc_login_ui_12"
                android:hint="请输入用户名或者邮箱"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mooc_login_ui_09"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mooc_login_ui_12"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/login_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="用户名或者密码不能为空!"
            android:textColor="#ed6653"
            android:textSize="14sp"
            android:gravity="center"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/login_sure"
                android:layout_width="120dp"
                android:layout_height="40dp"

                android:text="登录"
                android:background="@drawable/login_button_sure"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/login_cancel"
                android:layout_marginLeft="30dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="#6BC5A3"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
