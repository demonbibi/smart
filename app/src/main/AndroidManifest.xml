<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piano">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_music"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="teacher.StudentManagement"/>
        <activity android:name="teacher.CourseBehavior"/>
        <activity android:name="teacher.CourseJudge"/>
        <activity android:name="teacher.test2.TreeView"/>
        <activity android:name="student.ExerciseRecord"/>
        <activity android:name="student.LearningSituation"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>
